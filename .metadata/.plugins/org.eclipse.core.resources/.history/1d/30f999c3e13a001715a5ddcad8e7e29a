package com.sqldemo;

import java.sql.*;

public class Demo {
	public static void main(String args[]) {
		// 声明Connection对象
		Connection con = Mysqlutil.getInstace();
		try {
			con.setAutoCommit(false);// 开启事务 以下执行的语句都看做整体 原子性
			con.commit();
		} catch (Exception e) {
			e.printStackTrace();
			try {
				con.rollback();
			} catch (Exception e1) {
				e1.printStackTrace();
			}
		}

	}
}
