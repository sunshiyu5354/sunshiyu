package com.Thread;

public class QuqianThread implements Runnable{
	private Quqian qq;
	private int money;
	public QuqianThread(Quqian qq,int money){
		this.qq = qq;
		this.money = money;
	}
	public void run(){
		if(qq.getNumber()>=money){//账户余额足够
			qq.setNumber(qq.getNumber()-money);
			System.out.println("取钱成功，取走"+money+"$, 余额:"+qq.getNumber());
		}else{
			System.out.println("余额不足"+qq.getNumber());
		}
	}
}
